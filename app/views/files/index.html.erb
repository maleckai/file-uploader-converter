<div>
  <h1 class="text-center">File Uploader and Converter</h1>
</div>

<div class="text-center jumbotron">
  <h2>Upload Image: <%= link_to "Upload Image", uploads_path(:target => 'image') %> <br/>
    Upload Video: <%= link_to "Upload Video", uploads_path(:target => 'video') %></h2>
</div>

<br/>

<div>
  <h3>Images</h3>
  <table border="1" align="center">
    <tr>
      <th>Name</th>
      <th>File</th>
      <th>Created</th>
    </tr>
    <% @images.each do |image| %>
        <tr>
          <td><%= image.name %>:</td>
          <td><img src='<%= image.file %>' width='40px'></td>
          <td><%= image.created_at %></td>
          <td><%= link_to 'View', 'files/show?filee='+image.file.to_s+'&typp=image' %></td>
        </tr>
    <% end %>
  </table>
  <h3>Videos</h3>
  <table border="1" align="center">
    <tr>
      <th>Name</th>
      <th>File</th>
      <th>Created</th>
    </tr>
    <% @videos.each do |video| %>
        <tr>
          <td><%= video.name %>:</td>
          <td><%= video.file %></td>
          <td><%= video.created_at %></td>
          <td><%= link_to "View", 'files/show?filee='+video.file.to_s+'&typp=video' %></td>
        </tr>
    <% end %>
  </table>
</div>