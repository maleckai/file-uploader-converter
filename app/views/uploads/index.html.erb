<% if @target == 'image' %>
    <h1>Upload an Image</h1>

    <%= form_for @image, :url => uploads_path do |f| %>
        <p>
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </p>
        <p>
          <%= f.label :file %>
          <%= f.file_field :file %>
        </p>
        <p><%= f.submit "Upload Image" %></p>
    <% end %>
<% end %>

